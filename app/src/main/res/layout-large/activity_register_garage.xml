<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7d9da"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="30dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textNameGarage"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:text="ชื่อร้าน*"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/editNameGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textNameOwnerGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ชื่อเจ้าของร้าน*"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editNameOwnerGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textTypeGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ประเภทร้าน*"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerTypeGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



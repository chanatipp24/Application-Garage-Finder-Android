                android:id="@+id/textDetailGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="ข้อมูลร้าน"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editDetailGarage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="500"
                android:padding="10dp"
                android:hint="โปรดระบุหมายเหตุ เช่น รับเฉพาะยี่ห้อ/รุ่น/เวลาเปิด-ปิด/สามารถรับซ่อมนอกสถานที่ได้ เป็นต้น"
                android:textColorHint="#999999" />

            <Button
                android:id="@+id/btnGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#f43477"

                android:padding="10dp"
                android:text="เพิ่ม"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#414140"

                android:padding="10dp"
                android:text="ยกเลิก"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />

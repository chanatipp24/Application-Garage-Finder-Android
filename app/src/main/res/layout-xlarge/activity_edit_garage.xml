<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7d9da"
    android:weightSum="2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtGarageID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GarageID" />

            <TextView
                android:id="@+id/textNameGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ชื่อร้าน*"
                android:textSize="40sp"/>


            <EditText
                android:id="@+id/editNameGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:padding="30dp"/>

            <TextView
                android:id="@+id/textNameOwnerGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ชื่อเจ้าของร้าน*"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/editNameOwnerGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:padding="30dp" />

            <TextView
                android:id="@+id/textTypeGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="ประเภทร้าน*"
                android:textSize="40sp"/>


            <Spinner
                android:id="@+id/spinnerTypeGarage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp" />




            <TextView
                android:id="@+id/texttelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="เบอร์โทรศัพท์"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/editTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="30dp"
                android:maxLength="10" />

            <!--<TextView-->
                <!--android:id="@+id/textProvinseGarage"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="45dp"-->
                <!--android:text="จังหวัด" />-->


            <!--<Spinner-->
                <!--android:id="@+id/spinnerProvinseGarage"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/textDetailGarage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="ข้อมูลร้าน"
                android:textSize="40sp"/>

            <EditText
                android:id="@+id/editDetailGarage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:hint="โปรดระบุหมายเหตุ เช่น รับเฉพาะยี่ห้อ/รุ่น/เวลาเปิด-ปิด/สามารถรับซ่อมนอกสถานที่ได้ เป็นต้น"
                android:maxLength="500"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:background="#f43477"

                android:padding="10dp"
                android:text="บันทึก"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:background="#414140"

                android:padding="10dp"
                android:text="ยกเลิก"
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
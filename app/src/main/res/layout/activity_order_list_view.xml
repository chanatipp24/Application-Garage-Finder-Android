<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/NameList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="7dp"
        android:text="Name..."
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/AddressList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Address..."
        android:layout_marginTop="4dp"
        android:textSize="10sp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/NameList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TelephoneList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Telephone..."
        android:textSize="10sp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/AddressList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/TypeList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Type..."

        android:textSize="10sp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/TelephoneList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DetailList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Detail..."
        android:textSize="10sp"
        android:gravity="left|center"
        android:layout_weight="1"
        android:paddingLeft="3dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/TypeList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/RouteList"
        android:src="@drawable/route"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="11dp"
        android:layout_alignTop="@+id/CallBtn"
        android:layout_toEndOf="@+id/CallBtn"
        android:layout_marginStart="9dp" />

    <ImageView
        android:id="@+id/CallBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/call"
        android:layout_below="@+id/NameList"
        android:layout_toEndOf="@+id/AddressList" />

    <ImageView
        android:id="@+id/ReportBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/report"
        android:layout_above="@+id/DistanceList"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/RouteList" />

    <TextView
        android:id="@+id/DistanceList"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Distance..."
        android:paddingLeft="3dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/RouteList"
        android:layout_toRightOf="@+id/DetailList"
        android:layout_toEndOf="@+id/DetailList" />
</RelativeLayout>